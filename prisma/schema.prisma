generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  orders    Order[]
  workshops WorkshopEnrollment[]
  createdAt DateTime @default(now())
}

model Product {
  id        Int      @id @default(autoincrement())
  name      String
  price     Float
  stock     Int
  image     String?
  createdAt DateTime @default(now())
}

model Order {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  total     Float
  status    String
  createdAt DateTime @default(now())
}

model Workshop {
  id           Int      @id @default(autoincrement())
  title        String
  description  String
  date         DateTime
  capacity     Int
  enrollments  WorkshopEnrollment[]
}

model WorkshopEnrollment {
  id          Int      @id @default(autoincrement())
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  workshop    Workshop @relation(fields: [workshopId], references: [id])
  workshopId  Int
}

enum Role {
  USER
  ADMIN
}
